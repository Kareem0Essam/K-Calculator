# ===== ===== ===== #  
def cylinder ( ) :  #   2  
  PI = 3.141592653589793  

  print(''' 

    .------.         
   |   Ã—----| Radius 
   |.__|___.|        
   |   |    |        
   |   | h  |        
   |   |    |        
   |   |    |        
   |   |    |        
   |---|----|        
   '.______.'        

''')  



  radius = user_input_number ( ( 'Radius = ' , ' ' )  
  , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  

  h = user_input_number ( ( 'h = ' , ' ' )  
  , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  





  print('\n\nVolume = Ï€ Ã— RadiusÂ² Ã— h ')  

  print (f'\n\n--->\033[100;1m Volume â‰ˆ { PI * ( radius ** 2 ) * h } \033[0m')  




  print('\n\n\nOne Base Area = Ï€ Ã— RadiusÂ² ')  
  base_area                  = PI * ( radius ** 2 )  
  print (f'\n--->\033[100;1m One Base Area â‰ˆ { base_area } \033[0m')  


  print('\n\nLateral Area = 2 Ã— Ï€ Ã— Radius Ã— h ')  
  lateral_Area            = 2 * PI * radius * h  
  print (f'\n--->\033[100;1m Lateral Area â‰ˆ { lateral_Area } \033[0m')  


  print('\n\nTotal Surface Area = Two Bases Area + Lateral Area ')  

  print (f'\n--->\033[100;1m Total Surface Area â‰ˆ { ( 2 * base_area ) + lateral_Area } \033[0m')  
