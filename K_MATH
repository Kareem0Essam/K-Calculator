def circle ( ) :  #  ã€‡   1  
  PI = 3.141592653589793  

  circle_options = user_chooses(''' 

          _ , _  
      , '       ' , 
    ,'             ', 
   ,                 , 
   ,        Ã—--------, 
   ,                 , 
    ,               ,  
     ',           ,' 
        ' - , - ' 

1. Radius 
2. Circumference  &  Area 
''' , ' > ' , ( '1' , '2' ) )  






  if circle_options == '1' :  #####  1. Radius  
    radius_options = user_chooses(''' 
Calculating The Radius By :- 

1. Circumference 
2. Area 
''' , ' > ' , ( '1' , '2' ) )  



    if radius_options == '1' :  #  1. Circumference 
      print(''' 
          Circumference 
Radius = â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ 
             2 Ã— Ï€ 
''')  

      circumference = user_input_number ( ( 'Circumference = ' , ' ' )  
      , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


      print (f'\n\n\n--->\033[100;1m Radius â‰ˆ { circumference / ( 2 * PI ) } \033[0m')  



    else :  #  2. Area  
      print(''' 
            _______ 
           / Area 
Radius = Â²âˆš â”€â”€â”€â”€â”€â”€ 
              Ï€ 
''')  

      area = user_input_number ( ( 'Area = ' , ' ' )  
      , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


      print (f'\n\n\n--->\033[100;1m Radius â‰ˆ { ( area / PI ) ** 0.5 } \033[0m')  





  else :  #####  2. Circumference  &  Area   
    radius = user_input_number ( ( 'Radius = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  



    print('\n\nCircumference = 2 Ã— Ï€ Ã— Radius ')  

    print (f'\n\n--->\033[100;1m Circumference â‰ˆ { 2 * PI * radius } \033[0m')  



    print('\n\nArea = Ï€ Ã— RadiusÂ² ')  

    print (f'\n\n--->\033[100;1m Area â‰ˆ { PI * ( radius ** 2 ) } \033[0m')  
