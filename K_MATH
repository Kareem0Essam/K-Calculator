def rhombus ( ) :  #  â—Š   5  
  rhombus_options = user_chooses(''' 

     /|\ 
    / | \ a 
 a /  |  \ 
  /   |d1 \  
 /    |    \ 
<-----+----->
 \ d2 |    / 
  \   |   / 
   \  |  / a 
  a \ | / 
     \|/ 

1. a 
2. d ( Unknown ? ) 
3. Perimeter 
4. Area 
''' , ' > ' , ( '1' , '2' , '3' , '4' ) )  






  if rhombus_options == '1' :  #####  1. a  
    print('\na = Perimeter Ã· 4 ')   

    perimeter = user_input_number ( ( 'Perimeter = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


    print (f'\n\n\n--->\033[100;1m a â‰ˆ { perimeter / 4 } \033[0m')  






  elif rhombus_options == '2' :  #####  2. d ( Unknown ? )  
    d_unknown_options = user_chooses(''' 
Calculating d ( Unknown ? ) By :- 

1. d ( Known )  &  a 
2. d ( Known )  &  Area 
''' , ' > ' , ( '1' , '2' ) )  



    if d_unknown_options == '1' :  #  1. d ( Known )  &  a  
      print(""" 
Pythagorean Theorem :-                     ____________________________ 
                       d ( Unknown ? ) = Â²âˆš ( 2 Ã— aÂ² ) - ( d(Known)Â² ) 
""")  

      d_known = user_input_number ( ( 'd(Known) = ' , ' ' )  
      , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  

      a = user_input_number ( ( 'a = ' , ' ' )  
      , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


      print (f'\n\n\n--->\033[100;1m d ( Unknown ? ) â‰ˆ { ( ( 2 * ( a ** 2 ) ) - ( d_known ** 2 ) ) ** 0.5 } \033[0m')  



    else :  #  2. d ( Known )  &  Area  
      print(""" 
                    2 Ã— Area 
d ( Unknown ? ) = â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ 
                    d(Known) 
""")  

      d_known = user_input_number ( ( 'd(Known) = ' , ' ' )  
      , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  

      area = user_input_number ( ( 'Area = ' , ' ' )  
      , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


      print (f'\n\n\n--->\033[100;1m d ( Unknown ? ) â‰ˆ { ( 2 * area ) / d_known } \033[0m')  





  elif rhombus_options == '3' :  #####  3. Perimeter  
    print('\nPerimeter = a Ã— 4 ')   

    a = user_input_number ( ( 'a = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


    print (f'\n\n\n--->\033[100;1m Perimeter â‰ˆ { a * 4 } \033[0m')  





  else :  #####  4. Area  
    print(''' 
          d1 Ã— d2 
Area =  â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ 
             2 
''')  


    d1 = user_input_number ( ( 'd1 = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  

    d2 = user_input_number ( ( 'd2 = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


    print (f'\n\n\n--->\033[100;1m Area â‰ˆ { ( d1 * d2 ) / 2 } \033[0m')  
# ===== ===== ===== #  



