def cone ( ) :  #   4  
  PI = 3.141592653589793  

  cone_options = user_chooses(''' 

       /â†‘\    
      / | \   
     /  |  \  
    /.'`|`'.\ 
    '-.-.-.-' 

1. Volume 
2. Surface Area 
''' , ' > ' , ( '1' , '2' ) )  





  if cone_options == '1' :  #  1. Volume  
    print(''' 

       /â†‘\              
      / | \             
     /  |h \            
    /.'`|`'.\           
   /    Ã—----\-â†’ Radius 
   '-.-.-.-.-'          

''')  

    print('Volume = 1/3 Ã— [ Base Area = Ï€ Ã— RadiusÂ² ] Ã— h ')  


    radius = user_input_number ( ( 'Radius = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


    h = user_input_number ( ( 'h = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  



    print (f'\n\n\n--->\033[100;1m Volume â‰ˆ { ( 1 / 3 ) * ( PI * ( radius ** 2 ) ) * h } \033[0m')    





  else :  #  2. Surface Area  
    print(''' 

       /â†‘\              
      / | \             
 h â†-/  |  \            
    /.'`|`'.\           
   /    Ã—----\-â†’ Radius 
   '-.-.-.-.-'          

''')  

    print('''
Surface Area = Base Area + Lateral Area 

Base Area = Ï€ Ã— RadiusÂ² 

Lateral Area = Ï€ Ã— Radius Ã— h 
''')  


    radius = user_input_number ( ( 'Radius = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


    h = user_input_number ( ( 'h = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  



    print (f'\n\n\n--->\033[100;1m Surface Area â‰ˆ { ( PI * ( radius ** 2 ) ) + ( PI * radius * h ) } \033[0m')    
