def sphere ( ) :  #   1  
  PI = 3.141592653589793  

  sphere_options = user_chooses(''' 

          _ , _  
      , '  .    ' , 
    ,'    .        ', 
   ,     .           , 
  ,     .   Ã—---------, 
   ,     .           , 
    ,     .         ,  
     ',    .      ,' 
        ' - , - ' 

1. Radius 
2. Volume  &  Surface Area 
''' , ' > ' , ( '1' , '2' ) )  






  if sphere_options == '1' :  #####  1. Radius  
    radius_options = user_chooses(''' 
Calculating The Radius By :- 

1. Volume 
2. Surface Area 
''' , ' > ' , ( '1' , '2' ) )  



    if radius_options == '1' :  #  1. Volume 
      print(''' 
            ____________ 
           / 3 Ã— Volume 
Radius = Â³âˆš â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ 
             4 Ã— Ï€ 
''')  

      volume = user_input_number ( ( 'Volume = ' , ' ' )  
      , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


      print (f'\n\n\n--->\033[100;1m Radius â‰ˆ { ( ( 3 * volume ) / ( 4 * PI ) ) ** ( 1 / 3 ) } \033[0m')  



    else :  #  2. Surface Area  
      print(''' 
            ______________ 
           / Surface Area 
Radius = Â²âˆš â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ 
                4 Ã— Ï€ 
''')  

      surface_area = user_input_number ( ( 'Surface Area = ' , ' ' )  
      , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


      print (f'\n\n\n--->\033[100;1m Radius â‰ˆ { ( surface_area / ( 4 * PI ) ) ** 0.5 } \033[0m')  





  else :  #####  2. Volume  &  Surface Area  
    radius = user_input_number ( ( 'Radius = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  



    print('\n\nVolume = 4/3 Ã— Ï€ Ã— RadiusÂ³ ')  

    print (f'\n\n--->\033[100;1m Volume â‰ˆ { ( 4 / 3 ) * PI * ( radius ** 3 ) } \033[0m')  



    print('\n\nSurface Area = 4 Ã— Ï€ Ã— RadiusÂ² ')  

    print (f'\n\n--->\033[100;1m Surface Area â‰ˆ { 4 * PI * ( radius ** 2 ) } \033[0m')  
