# ===== ===== ===== #  
def rectangular_prism ( ) :  #   6  

  print(''' 

       w            
   +--------+.      
   |`.      | `.    
   |  `.    |   `.  
 h |    `+--+-----+ 
   |     |  |     | 
   +-----+--+.    | 
    `.   |    `.  | 
    l `. |      `.| 
        `+--------+ 

''')  



  l = user_input_number ( ( 'l = ' , ' ' )  
  , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  

  w = user_input_number ( ( 'w = ' , ' ' )  
  , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  

  h = user_input_number ( ( 'h = ' , ' ' )  
  , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  





  print('\n\nVolume = l Ã— w Ã— h ')  

  print (f'\n\n--->\033[100;1m Volume â‰ˆ { l * w * h } \033[0m')  



  print('\n\nSurface Area = 2 Ã— l Ã— w  +  2 Ã— l Ã— h  +  2 Ã— w Ã— h ')  

  print (f'\n\n--->\033[100;1m Surface Area â‰ˆ { ( 2 * l * w )  +  ( 2 * l * h )  +  ( 2 * w * h ) } \033[0m')  
