def parallelogram ( ) :  #  â–±   7  
  parallelogram_options = user_chooses(''' 

                b             
         ____________________ 
        /|                  / 
       / |                 /  
   a  /  | h              / a 
     /   |               /    
    /____|______________/     
                b             

1. a 
2. b 
3. Perimeter 
4. Area 
''' , ' > ' , ( '1' , '2' , '3' , '4' ) )  






  if parallelogram_options == '1' :  #####  1. a  
    print(''' 
      Perimeter 
a =  â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ - b 
          2 
''')  

    b = user_input_number ( ( 'b = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  

    perimeter = user_input_number ( ( 'Perimeter = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


    print (f'\n\n\n--->\033[100;1m a â‰ˆ { ( perimeter / 2 ) - b } \033[0m')  





  elif parallelogram_options == '2' :  #####  2. b  
    b_options = user_chooses(''' 
Calculating b By :- 

1. Perimeter  &  a 
2. Area  &  h 
''' , ' > ' , ( '1' , '2' ) )  



    if b_options == '1' :  #  1. Perimeter  &  a  
      print(''' 
      Perimeter 
b =  â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ - a 
          2 
''')  

      a = user_input_number ( ( 'a = ' , ' ' )  
      , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  

      perimeter = user_input_number ( ( 'Perimeter = ' , ' ' )  
      , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


      print (f'\n\n\n--->\033[100;1m b â‰ˆ { ( perimeter / 2 ) - a } \033[0m')  



    else :  #  2. Area  &  h  
      print(''' 
       Area 
b =  â”€â”€â”€â”€â”€â”€â”€â”€ 
        h 
''')  

      h = user_input_number ( ( 'h = ' , ' ' )  
      , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  

      area = user_input_number ( ( 'Area = ' , ' ' )  
      , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


      print (f'\n\n\n--->\033[100;1m b â‰ˆ { area / h } \033[0m')  





  elif parallelogram_options == '3' :  #####  3. Perimeter  
    print('\nPerimeter = 2 Ã— ( a + b ) ')   

    a = user_input_number ( ( 'a = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  

    b = user_input_number ( ( 'b = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


    print (f'\n\n\n--->\033[100;1m Perimeter â‰ˆ { 2 * ( a + b ) } \033[0m')  





  else :  #####  4. Area  
    print('\nArea = b Ã— h ')   


    b = user_input_number ( ( 'b = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  

    h = user_input_number ( ( 'h = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


    print (f'\n\n\n--->\033[100;1m Area â‰ˆ { b * h } \033[0m')  
