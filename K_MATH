def oval ( ) :  #  â¬¯   2  
  PI = 3.141592653589793  

  print(''' 
          _ , _  
      , '   |   ' , 
    ,'      |      ', 
   ,      a |        , 
  ,         |         , 
  , . . . . +---------, 
  ,         .   b     , 
   ,        .        , 
    ,       .       ,  
     ',     .     ,' 
        ' - , - ' 
  
''')  



  while True :  

    a = user_input_number ( ( 'a = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  

    b = user_input_number ( ( 'b = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


    if a != b :  
      break  

    else :  
      print("\n\033[31mError :- \na & b must have different lengths . \033[0m\n")  




  print(""" 
Ramanujan's Approximation :-                                  _______________________ 
                             Perimeter â‰ˆ Ï€ Ã— ( 3( a + b ) - Â²âˆš( 3a + b ) Ã— ( a + 3b ) ) 
""")  


  print (f'\n\n--->\033[100;1m Perimeter â‰ˆ { PI * ( ( 3 * ( a + b ) ) - ( ( ( ( 3 * a ) + b ) * ( a + ( 3 * b ) ) ) ** 0.5 ) ) } \033[0m')  



  print('\n\nArea = Ï€ Ã— a Ã— b ')  


  print (f'\n\n--->\033[100;1m Area â‰ˆ { PI * a * b } \033[0m')  
