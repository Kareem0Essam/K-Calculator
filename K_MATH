def cube ( ) :  #   5  
  cube_options = user_chooses(''' 

     +------+   
    /|     /|   
   +-+----+ | a 
   | |    | |   
   | +----+-+   
   |/     |/    
   +------+     

1. a 
2. Volume  &  Surface Area 
''' , ' > ' , ( '1' , '2' ) )  






  if cube_options == '1' :  #####  1. a  
    a_options = user_chooses(''' 
Calculating a By :- 

1. Volume 
2. Surface Area 
''' , ' > ' , ( '1' , '2' ) )  



    if a_options == '1' :  #  1. Volume 
      print(''' 
      ________ 
a = Â³âˆš Volume 
''')  

      volume = user_input_number ( ( 'Volume = ' , ' ' )  
      , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


      print (f'\n\n\n--->\033[100;1m a â‰ˆ { volume ** ( 1 / 3 ) } \033[0m')  



    else :  #  2. Surface Area  
      print(''' 
       ______________ 
      / Surface Area 
a = Â²âˆš â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ 
             6 
''')  

      surface_area = user_input_number ( ( 'Surface Area = ' , ' ' )  
      , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


      print (f'\n\n\n--->\033[100;1m a â‰ˆ { ( surface_area / 6 ) ** 0.5 } \033[0m')  





  else :  #####  2. Volume  &  Surface Area  
    a = user_input_number ( ( 'a = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  



    print('\n\nVolume = aÂ³ ')  

    print (f'\n\n--->\033[100;1m Volume â‰ˆ { a * a * a } \033[0m')  



    print('\n\nSurface Area = 6 Ã— aÂ² ')  

    print (f'\n\n--->\033[100;1m Surface Area â‰ˆ { 6 * ( a * a ) } \033[0m')  
