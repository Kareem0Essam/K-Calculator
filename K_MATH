def pyramid ( ) :  #   3  
  pyramid_options = user_chooses(''' 
Regular Square Pyramid :- 

       /\.         
      /  \`.       
     /    \ `.     
    /      \  `.   
   /        \   `. 
  /          \  /  
 /____________\/   

1. Volume 
2. Surface Area 
''' , ' > ' , ( '1' , '2' ) )  





  if pyramid_options == '1' :  #  1. Volume  
    print(''' 

       /|\.         
      / | \`.       
     /  |  \ `.     
    / h |   \  `.   
   /    |    \   `. 
  /     Ã—     \  /  
 /_____________\/   
 a             b    

''')  

    print('Volume = 1/3 Ã— Base Area Ã— h ')  


    h = user_input_number ( ( 'h = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


    ab = user_input_number ( ( 'ab = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  



    print (f'\n\n\n--->\033[100;1m Volume â‰ˆ { ( 1 / 3 ) * ( ab * ab ) * h } \033[0m')    





  else :  #  2. Surface Area  
    print(''' 

        â†‘.              
       / \.` .          
      /   \`. ` .       
     /     \ `.   ` .   
    /       \  `.  /    
   /         \   `.-â†’ h 
  /           \  /      
 /_____________\/       
 a             b      

''')  

    print('Surface Area = Base Area + 1/2 Ã— Base Perimeter Ã— h ')  


    h = user_input_number ( ( 'h = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  


    ab = user_input_number ( ( 'ab = ' , ' ' )  
    , positive_negative = '+' , include_zero__zero_message = ( False , '?' ) )  



    print (f'\n\n\n--->\033[100;1m Surface Area â‰ˆ { ( ab * ab ) + ( ( 1 / 2 ) * ( ab * 4 ) * h ) } \033[0m')    
