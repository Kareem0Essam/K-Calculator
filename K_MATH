def not_empty_input ( message ) :  
  _input_ = input( str( message ) )  

  while  not _input_  or  _input_.isspace()  :  
    print('\033[F\033[2K' , end = '' )  #  Ø§Ù„Ø³Ø·Ø± Ù‡ÙŠØªÙ…Ø³Ø­  Ù„Ùˆ Ø§Ù„Ù…Ø³ØªØ®Ø¯Ù… Ø¯Ø®Ù„ ÙØ±Ø§Øº Ø§Ùˆ Ù…Ø³Ø§ÙØ§Øª  
    _input_ = input( str( message ) )  



  return _input_  
