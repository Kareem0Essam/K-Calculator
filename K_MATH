def units_conversion () :  
  options_list = (
'1. Length ğŸ“ '  
,  
'2. Weight âš–ï¸ '  
,  
'3. Data ğŸ“‚ '  
,  
'4. Time ğŸ•— '  
,  
'5. Currency ğŸ’± '  
,  
'6. Temperature ğŸŒ¡ï¸ '  
,  
'7. BIN <-> OCT <-> DEC <-> HEX'  
)  ;  print_options = '\n' . join ( options_list )  



  option = user_chooses (f'''\nPlease select an option : ( 1 - 2 - 3 - 4 - 5 - 6 - 7 ) :- 

{ print_options } 
''' , ' > ' , ( '1' , '2' , '3' , '4' , '5' , '6' , '7' ) )  


  print ('\n   ' + options_list [ int( option ) - 1 ] + ' :-' )  





  if option == '1' :  #  1. Length  ğŸ“  
    length()  
  elif option == '2' :  #  2. Weight  âš–ï¸  
    weight()  
  elif option == '3' :  #  3. Data  ğŸ“‚  
    data()  
  elif option == '4' :  #  4. Time  ğŸ•—  
    time()  
  elif option == '5' :  #  5. Currency  ğŸ’±  
    cur()  
  elif option == '6' :  #  6. Temperature  ğŸŒ¡ï¸  
    temperature()  
  else :  # == '7'  #  7. BIN <-> OCT <-> DEC <-> HEX  
    bin_oct_dec_hex()  





  return '\033[0m\033[2K'  #  main.py  Ø¨ÙŠÙ…Ø³Ø­ Ø³Ø·Ø± Ø·Ø¨Ø§Ø¹Ø© Ø§Ù„Ù†ØªÙŠØ¬Ø© Ø§Ù„Ù„Ù‰ ÙÙ‰  
